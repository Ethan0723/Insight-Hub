# compatible default: bedrock-claude-4-5-sonnet
# zhipu default: glm-4.5
LLM_MODEL=bedrock-claude-4-5-sonnet
LLM_MAX_TOKENS=500
LLM_MAX_INPUT_CHARS=12000

# Pipeline config (Python)
SUPABASE_URL=
SUPABASE_SERVICE_ROLE_KEY=
GOOGLE_WINDOW_DAYS=7
MAX_GOOGLE_WINDOWS=24
MAX_ENTRIES_PER_FEED=90
ENABLE_SUMMARY=true
