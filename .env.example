# Frontend runtime config (Vite)
VITE_SUPABASE_URL=
VITE_SUPABASE_ANON_KEY=
VITE_USE_SUPABASE=true
VITE_SUPABASE_NEWS_LIMIT=1000

# Shared LLM config (Node + Python pipeline)
LLM_API_KEY=
LLM_API_URL=https://litellm.shoplazza.site/chat/completions
